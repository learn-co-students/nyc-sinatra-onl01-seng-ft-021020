<h2><%= @figure.name %></h2>

<h3>Figure Titles</h3>
<ul>
  <% @figure.titles.each do |title| %>
    <li><%= title.name %></li>
  <% end %>
</ul>

<h3>Figure Landmarks</h3>
<ul>
  <% @figure.landmarks.each do |landmark| %>
    <li><%= landmark.name %> - <%= landmark.year_completed %></li>
  <% end %>
</ul>

<a class="button" href="/figures">Figures</a>
